  "version": "0.2.0",
  "configurations": [
    {
      "name": "All",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceRoot}",
      "showLog": true,
      "env": {
        "KANTHOR_ENV": "development",
        "KANTHOR_DEBUGGING_SERVER_PORT": "6061"
      },
      "args": ["serve", "all"],
      "preLaunchTask": "make"
    },
    {
      "name": "Core APIs",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceRoot}",
      "showLog": true,
      "env": {
        "KANTHOR_ENV": "development",
        "KANTHOR_DEBUGGING_SERVER_PORT": "6061"
      },
      "args": ["serve", "sdk", "portal"],
      "preLaunchTask": "make"
    },
    {
      "name": "Core Background",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceRoot}",
      "showLog": true,
      "env": {
        "KANTHOR_ENV": "development",
        "KANTHOR_DEBUGGING_SERVER_PORT": "6062"
      },
      "args": ["serve", "storage", "scheduler", "dispatcher"],
      "preLaunchTask": "make"
    }
  ]
}
